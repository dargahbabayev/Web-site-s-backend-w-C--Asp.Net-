@model IEnumerable<Pofo.Models.AboutPage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">About Page</h1>
    </div>

</div>
<div class="row">
    <div class="col-lg-12">

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LeftPreTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LeftTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LeftText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RightPreText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OverviewTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OverViewVideo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OverViewBgPic)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MainSlogan)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Languages.LangName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        
                    </td>
                    <td>
                       
                    </td>
                    <td>
                      
                    </td>
                    <td><i class="fas fa-eye">   @Html.ActionLink("Details", "Details", new { id = item.Id }) </i>
                     
                    </td>
                    <td>
                     
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OverViewVideo)
                    </td>
                    <td>
                        <input type="image" src="~/Uploads/@item.OverViewBgPic" width="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MainSlogan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Languages.LangName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>

</div>