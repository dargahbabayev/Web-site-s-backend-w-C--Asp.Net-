@model IEnumerable<Pofo.Models.SingleBlog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">All Blogs</h1>
    </div>

</div>
<div class="row">
    <div class="col-lg-12">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table  table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>

                <th>
                    Date
                </th>
                <th>
                    Intro Photo
                </th>

                <th>
                    Category
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Languages.LangName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>

                    <td>
                        @item.Date.Value.ToString("MM/dd/yyyy H:mm")
                    </td>
                    <td>
                        <input type="image" src="~/Uploads/@item.IntroPhoto" width="150" />
                    </td>



                    <td>
                        @Html.DisplayFor(modelItem => item.BloggCategories.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Languages.LangName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>

</div>