                                <div class="display-table height-100 width-100">
                                    <div class="vertical-align-middle display-table-cell icon-social-small">
                                        @if (creativPeople.Facebook != null)
                                        {
                                            <a href="@creativPeople.Facebook" class="text-white text-white-hover" target="_blank"><i class="fab fa-facebook-f"></i></a>
                                        }
                                        @if (creativPeople.Twitter != null)
                                        {
                                            <a href="@creativPeople.Twitter" class="text-white text-white-hover" target="_blank"><i class="fab fa-twitter"></i></a>
                                        }
                                        @if (creativPeople.Google != null)
                                        {
                                            <a href="@creativPeople.Google" class="text-white text-white-hover" target="_blank"><i class="fab fa-google-plus-g"></i></a>

                                        }
                                        @if (creativPeople.Instagram != null)
                                        {
                                            <a href="@creativPeople.Instagram " class="text-white text-white-hover" target="_blank"><i class="fab fa-instagram"></i></a>

                                        }

                                    </div>
                                </div>
                            </div>
                            <div class="team-overlay bg-deep-pink opacity8"></div>
                        </div>
                        <figcaption>
                            <div class="team-member-position margin-20px-top text-center">
                                <div class="text-small font-weight-500 text-extra-dark-gray text-uppercase">@creativPeople.Name</div>
                                <div class="text-extra-small text-uppercase text-medium-gray">@creativPeople.Position</div>
                            </div>
                        </figcaption>
                    </figure>
                </div>
                <!-- end team item -->
            }


        </div>
    </div>
</section>
