<!-- start tabs section1 -->
<section class="wow fadeIn">
    <div class="container tab-style2">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <!-- tab navigation -->
                <ul class="nav nav-tabs alt-font text-uppercase alt-font text-small display-inherit text-center font-weight-600">
                    @{
                        int a = 0;
                    }
                    @foreach (var department in Model.Departments)
                    {

                        if (a == 0)
                        {
                            <li class="active"><a href="#@department.DepName.ToLower().Replace(" ","_")" data-toggle="tab">@department.DepName</a></li>
                            a++;

                        }
                        else

                        {

                            <li class=""><a href="#@department.DepName.ToLower().Replace(" ","_")" data-toggle="tab">@department.DepName</a></li>

                        }
                    }
                </ul>
                <!-- tab end navigation -->
            </div>
        </div>
        <div class="tab-content">
            @{
                int b = 0;
            }
            <!-- start tab content1 -->
            @foreach (var depscard in Model.DepsCards)
            {
                if (b == 0)
                {

                    <div class="tab-pane med-text fade in active" id="@depscard.Departments.DepName.ToLower().Replace(" ","_")">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-12 xs-margin-30px-bottom">
                                <div class="display-table width-100 height-100">
                                    @foreach (var depcardphoto in depscard.DepCardPhotos)
                                    {
                                        <div class="display-table-cell vertical-align-middle">
                                            <img src="/Uploads/@depcardphoto.PhotoName" class="width-100" alt="" />
                                        </div>
                                    }

                                </div>
                            </div>
                            <div class="col-md-5 col-sm-6 col-xs-12 col-md-offset-1">
                                <div class="display-table width-100 height-100">
                                    <div class="display-table-cell vertical-align-middle">
                                        <h6 class="alt-font font-weight-700 text-extra-dark-gray margin-20px-bottom text-uppercase">@depscard.Name</h6>
                                        <span class="text-extra-large text-extra-dark-gray margin-20px-bottom display-block">@depscard.Title</span>
                                        <p>@depscard.Text</p>
                                        <a href="services-simple.html" class="btn btn-small btn-rounded btn-dark-gray">Explore services</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    b++;
                }
                else
                {

                    <div class="tab-pane med-text fade in " id="@depscard.Departments.DepName.ToLower().Replace(" ","_")">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-12 xs-margin-30px-bottom">
                                <div class="display-table width-100 height-100">
                                    @foreach (var depcardphoto in depscard.DepCardPhotos)
                                    {
                                        <div class="display-table-cell vertical-align-middle">
                                            <img src="/Uploads/@depcardphoto.PhotoName" class="width-100" alt="" />
                                        </div>
                                    }

                                </div>
                            </div>
                            <div class="col-md-5 col-sm-6 col-xs-12 col-md-offset-1">
                                <div class="display-table width-100 height-100">
                                    <div class="display-table-cell vertical-align-middle">
                                        <h6 class="alt-font font-weight-700 text-extra-dark-gray margin-20px-bottom text-uppercase">@depscard.Name</h6>
                                        <span class="text-extra-large text-extra-dark-gray margin-20px-bottom display-block">@depscard.Title</span>
                                        <p>@depscard.Text</p>
                                        <a href="services-simple.html" class="btn btn-small btn-rounded btn-dark-gray">Explore services</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            }

            <!-- end tab content -->

        </div>
    </div>
</section>
<!-- end tabs section -->
